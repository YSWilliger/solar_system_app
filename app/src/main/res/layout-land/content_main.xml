<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.maza.oursolarsystem.MainActivity"
    tools:showIn="@layout/activity_main"
    android:gravity="center_vertical"
    android:background="#040404">

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:foregroundGravity="center_vertical"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:id="@+id/sunButton"
                        android:src="@drawable/tulip1"
                        android:layout_margin="5dp"/>

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:id="@+id/mercButton"
                        android:src="@drawable/tulip1"
                        android:layout_margin="5dp"/>

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:id="@+id/venuButton"
                        android:src="@drawable/tulip1"
                        android:layout_margin="5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:id="@+id/earthButton"
                        android:src="@drawable/tulip1"
                        android:layout_margin="5dp"/>

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:id="@+id/marsButton"
                        android:src="@drawable/tulip1"
                        android:layout_margin="5dp"/>

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:id="@+id/asterButton"
                        android:src="@drawable/tulip1"
                        android:layout_margin="5dp"/>

                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toRightButton"
                android:scaleType="fitXY"
                android:src="@drawable/arrow1"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:foregroundGravity="center_vertical"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/toLeftButton"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/arrow_left_1"/>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:id="@+id/linearLayout2">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:layout_margin="5dp"
                        android:id="@+id/jupButton"
                        android:src="@drawable/tulip1"/>

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:layout_margin="5dp"
                        android:id="@+id/satButton"
                        android:src="@drawable/tulip1"/>

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:id="@+id/uraButton"
                        android:src="@drawable/tulip1"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:id="@+id/nepButton"
                        android:layout_margin="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/tulip1"/>

                    <ImageButton
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:scaleType="fitXY"
                        android:layout_margin="5dp"
                        android:id="@+id/dwarfButton"
                        android:src="@drawable/tulip1"/>
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>


    </ViewFlipper>
</RelativeLayout>

